package com.tqphuc.dao.impl;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.List;

import com.tqphuc.dao.ISimDAO;
import com.tqphuc.mapper.SimMapper;
import com.tqphuc.model.SimModel;

public class SimDAO extends AbstractDAO<SimModel> implements ISimDAO {

	@Override
	public List<SimModel> findAll() {
		String sql = "SELECT * FROM sim";
		return query(sql, new SimMapper());
	}

	@Override
	public Long save(SimModel simModel) {
		ResultSet resultSet = null;
		Long id = null;
		Connection connection = null;
		PreparedStatement statement = null;
		try {
			String sql = "INSERT INTO sim (sotb, sothuong, sodep) VALUES (?,?,?)";
			connection = getConnection();
			connection.setAutoCommit(false);
			statement = connection.prepareStatement(sql,Statement.RETURN_GENERATED_KEYS);
			statement.setLong(1, simModel.getSoTb());
			statement.setLong(2, simModel.getSoThuong());
			statement.setLong(3, simModel.getSoDep());
			statement.executeUpdate();
			resultSet = statement.getGeneratedKeys();
			if (resultSet.next()) {
				id = resultSet.getLong(1);
			}
			//thieu comit ko luu db
			connection.commit();
			return id;
		} catch (SQLException e) {
			if(connection !=null) {
				try {
					connection.rollback();
				}catch(SQLException e1) {
					e1.printStackTrace();
				}
			}
			return null;
		}finally{
			try {
				if (connection != null) {
					connection.close();
				}
				if (statement != null) {
					statement.close();
				}
				if (resultSet != null) {
					resultSet.close();
				}
			} catch (SQLException e) {
				return null;
			}
				
		}
	}
}
